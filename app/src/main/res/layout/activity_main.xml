<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- Imagen del restaurante -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_restaurante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedidos Restaurante Chileno"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Imagen Pastel de Choclo -->
    <ImageView
        android:id="@+id/imagePastel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pastel_de_choclo"
        app:layout_constraintTop_toBottomOf="@id/textTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Pastel de Choclo -->
    <TextView
        android:id="@+id/textPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastel de Choclo ($12.000)"
        app:layout_constraintTop_toBottomOf="@id/imagePastel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/inputCantidadPastel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintTop_toTopOf="@id/textPastel"
        app:layout_constraintStart_toEndOf="@id/textPastel"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textSubtotalPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: $0"
        app:layout_constraintTop_toBottomOf="@id/textPastel"
        app:layout_constraintStart_toStartOf="@id/textPastel"
        android:layout_marginTop="8dp" />

    <!-- Imagen Cazuela -->
    <ImageView
        android:id="@+id/imageCazuela"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cazuela"
        app:layout_constraintTop_toBottomOf="@id/textSubtotalPastel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Cazuela -->
    <TextView
        android:id="@+id/textCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cazuela ($10.000)"
        app:layout_constraintTop_toBottomOf="@id/imageCazuela"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/inputCantidadCazuela"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintTop_toTopOf="@id/textCazuela"
        app:layout_constraintStart_toEndOf="@id/textCazuela"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textSubtotalCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: $0"
        app:layout_constraintTop_toBottomOf="@id/textCazuela"
        app:layout_constraintStart_toStartOf="@id/textCazuela"
        android:layout_marginTop="8dp" />

    <!-- Switch para propina -->
    <Switch
        android:id="@+id/switchPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Incluir propina del 10%?"
        app:layout_constraintTop_toBottomOf="@id/textSubtotalCazuela"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <!-- Totales -->
    <TextView
        android:id="@+id/textTotalSinPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total sin propina: $0"
        app:layout_constraintTop_toBottomOf="@id/switchPropina"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textMontoPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propina: $0"
        app:layout_constraintTop_toBottomOf="@id/textTotalSinPropina"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textTotalFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total a pagar: $0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textMontoPropina"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>